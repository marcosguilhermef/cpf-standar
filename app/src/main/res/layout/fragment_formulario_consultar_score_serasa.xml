<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/background"
    tools:context=".ui.consultarScoreSerasa.FormularioConsultarHistoricoSerasa">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_7"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <TextView
            android:id="@+id/instrucao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_8"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="30dp"
            android:justificationMode="inter_word"
            app:layout_constraintTop_toBottomOf="@id/titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <TextView
            android:id="@+id/instrucao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_9"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="30dp"
            android:justificationMode="inter_word"
            app:layout_constraintTop_toBottomOf="@id/instrucao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <Button
            android:id="@+id/botao1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="JÁ TENHO CADASTRO"
            app:cornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/instrucao2" />
        <Button
            android:id="@+id/botao2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="AINDA NÃO TENHO CADASTRO"
            android:layout_marginTop="2dp"
            app:cornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@id/botao1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>